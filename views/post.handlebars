<div class="card" id="post-card">
    <div>
        <h3>Edit Post</h3>
    </div>
    <form>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title-input" value="{{posts.title}}"><br>
        <label for="content">Content:</label>
        <input type="text" name="content" id="content" value="{{posts.content}}"><br>
        <div id="buttons-modal">
            <button class="button" role="button" id="update">Update</button>
            <button class="button" role="button" id="delete">Delete</button>
        </div>
    </form> 
</div>

<div class="card">
    <div>
        <h3>Comments</h3>
    </div>
    <div class="body">
        {{#each comments as |comment|}}
        <div class="comment">
            <p>{{comment.content}}</p>
            <p class="comment-user">- {{comment.user.username}}</p> 
        </div>
        {{/each}}
    </div>
</div>