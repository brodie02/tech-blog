<div id="post-holder">
    {{#each posts as |post|}}
    <div class="post">
        <p>{{post.title}}</p>
        <p>{{format_date post.date_created}}</p>
    </div>
    {{/each}}
</div>


<button class="button" id="modal-button">+ New Post</button>

<div id="modal-container">
<div class="card" id="dashboard-modal">
    <div>
        <h3>Create New Post</h3>
    </div>
    <form>
        <label for="title">Title:</label>
        <input type="text" name="title"><br>
        <label for="content">Content:</label>
        <input type="text" name="content" id="content"><br>
        <div id="buttons-modal">
            <button class="button" role="button" id="cancel">Cancel</button>
            <button class="button" role="button" id="create">Create</button>
        </div>
    </form> 
</div>
</div>

<script src="/js/dashboard.js"></script>